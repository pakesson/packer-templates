{
    "variables" : {
        "memory" : "4096",
        "cpus" : "2",
        "vm_username" : "xubuntu",
        "vm_password" : "password"
    },
    "description" : "Xubuntu Core 17.10 with basic extras",
    "builders": [
        {
            "name": "xubuntu-17.10-core-extras",
            "type": "virtualbox-ovf",
            "boot_wait": "10s",
            "guest_additions_mode": "disable",
            "headless": false,
            "source_path": "output-xubuntu-17.10-core/xubuntu-17.10-core-amd64.ova",
            "ssh_username": "{{user `vm_username`}}",
            "ssh_password": "{{user `vm_password`}}",
            "ssh_port": 22,
            "ssh_wait_timeout": "60m",
            "shutdown_command": "sudo systemctl poweroff",
            "format": "ova",
            "vm_name": "xubuntu-17.10-core-extras-amd64",
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
                ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"],
                ["modifyvm", "{{.Name}}", "--vram", "16"],
                ["modifyvm", "{{.Name}}", "--usb", "on"],
                ["modifyvm", "{{.Name}}", "--cableconnected1", "on"]
            ]
        }
    ],
    "provisioners" : [
        {
            "type": "shell",
            "scripts": [
                "scripts/apt-update.sh",
                "scripts/apt-xubuntu-core-extras.sh",
                "scripts/cleanup.sh"
            ]
        }
    ]
}
