{
    "variables": {
        "vm_name": "windows-10-enterprise",

        "iso_url": "/path/to/windows.iso",
        "iso_checksum": "",
        "iso_checksum_type": "sha256",

        "disk_size" : "80000",
        "memory" : "4096",
        "cpus" : "2",

        "virtio_win_iso": "/path/to/virtio.iso",

        "ssh_winrm_host_port": "2299",
        "winrm_username": "user",
        "winrm_password": "password"
    },

    "builders": [
        {
            "type": "qemu",
            "vm_name": "{{ user `vm_name` }}",
            "output_directory": "output-{{user `vm_name`}}-qemu",
            "accelerator": "kvm",

            "iso_checksum_type": "{{ user `iso_checksum_type` }}",
            "iso_checksum": "{{ user `iso_checksum` }}",
            "iso_urls": [ "{{ user `iso_url` }}" ],

            "communicator": "winrm",
            "ssh_host_port_min": "{{ user `ssh_winrm_host_port` }}",
            "ssh_host_port_max": "{{ user `ssh_winrm_host_port` }}",
            "winrm_username": "{{ user `winrm_username` }}",
            "winrm_password": "{{ user `winrm_password` }}",
            "winrm_timeout": "12h",
            "winrm_use_ssl": "true",
            "winrm_insecure": "true",

            "headless": "false",

            "shutdown_command": "A:\\sysprep.bat",
            "shutdown_timeout": "15m",

            "format": "qcow2",
            "net_device": "virtio-net",
            "disk_interface": "virtio",
            "disk_size": "{{ user `disk_size` }}",
            "qemuargs": [
                [ "-m", "{{ user `memory` }}" ],
                [ "-smp", "{{ user `cpus` }}" ],
                [ "-drive", "file={{ user `virtio_win_iso` }},media=cdrom,index=3" ],
                [ "-drive", "file=output-{{ user `vm_name` }}-qemu/{{ .Name }},if=virtio,cache=writeback,discard=ignore,format=qcow2,index=1" ]
            ],

            "floppy_files": [
                "http/windows-10-enterprise/Autounattend.xml",
                "scripts/windows-10-enterprise/fixnetwork.ps1",
                "scripts/windows-10-enterprise/winrm_config.ps1",
                "scripts/windows-10-enterprise/unattend.xml",
                "scripts/windows-10-enterprise/sysprep.bat"
            ]
    }
  ],
  "provisioners": [
  ]
}
