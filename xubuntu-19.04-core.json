{
    "variables" : {
        "ubuntu_version": "19.04",
        "vm_name": "xubuntu-19.04",

        "iso_url": "http://archive.ubuntu.com/ubuntu/dists/disco/main/installer-amd64/current/images/netboot/mini.iso",
        "iso_checksum": "9c80874dbd5f583b32819921c2f44c0fe96050cfd77be1ed38738cb2ea3339eb",
        "iso_checksum_type": "sha256",

        "disk_size" : "80000",
        "memory" : "4096",
        "cpus" : "2",

        "vm_username" : "xubuntu",
        "vm_password" : "password",

        "country" : "SE",
        "language" : "en",
        "locale" : "en_US.UTF-8",
        "keymap" : "se",
        "timezone" : "Europe/Stockholm"
    },
    "description" : "Xubuntu Core {{user `ubuntu_version`}} with basic extras",
    "builders": [
        {
            "type": "virtualbox-iso",
            "vm_name": "{{user `vm_name`}}-amd64",
            "output_directory": "output-{{user `vm_name`}}-vbox",
            "boot_command": [
                "<tab><wait> ",
                "net.ifnames=0 ",
                "auto-install/enable=true ",
                "debconf/priority=critical ",
                "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/xubuntu-{{user `ubuntu_version`}}-core-preseed.cfg ",
                "passwd/username={{user `vm_username`}} ",
                "passwd/user-password={{user `vm_password`}} ",
                "passwd/user-password-again={{user `vm_password`}} ",
                "country={{user `country`}} ",
                "language={{user `language`}} ",
                "locale={{user `locale`}} ",
                "keyboard-configuration/xkb-keymap={{user `keymap`}} ",
                "keyboard-configuration/layoutcode={{user `keymap`}} ",
                "time/zone={{user `timezone`}} ",
                "<enter>"
            ],
            "boot_wait": "10s",
            "disk_size": "{{user `disk_size`}}",
            "guest_os_type": "Ubuntu_64",
            "headless": false,
            "http_directory": "http",
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "ssh_username": "{{user `vm_username`}}",
            "ssh_password": "{{user `vm_password`}}",
            "ssh_port": 22,
            "ssh_wait_timeout": "60m",
            "shutdown_command": "sudo systemctl poweroff",
            "format": "ova",
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
                ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"],
                ["modifyvm", "{{.Name}}", "--cableconnected1", "on"]
            ]
        },
        {
            "type": "qemu",
            "vm_name": "{{user `vm_name`}}-amd64",
            "output_directory": "output-{{user `vm_name`}}-qemu",
            "accelerator": "kvm",
            "boot_command": [
                "<tab><wait> ",
                "net.ifnames=0 ",
                "auto-install/enable=true ",
                "debconf/priority=critical ",
                "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/xubuntu-{{user `ubuntu_version`}}-core-preseed.cfg ",
                "passwd/username={{user `vm_username`}} ",
                "passwd/user-password={{user `vm_password`}} ",
                "passwd/user-password-again={{user `vm_password`}} ",
                "country={{user `country`}} ",
                "language={{user `language`}} ",
                "locale={{user `locale`}} ",
                "keyboard-configuration/xkb-keymap={{user `keymap`}} ",
                "keyboard-configuration/layoutcode={{user `keymap`}} ",
                "time/zone={{user `timezone`}} ",
                "<enter>"
            ],
            "boot_wait": "10s",
            "disk_size": "{{user `disk_size`}}",
            "http_directory": "http",
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "ssh_username": "{{user `vm_username`}}",
            "ssh_password": "{{user `vm_password`}}",
            "ssh_port": 22,
            "ssh_wait_timeout": "60m",
            "shutdown_command": "sudo systemctl poweroff",
            "format": "qcow2",
            "net_device": "virtio-net",
            "disk_interface": "virtio",
            "qemuargs": [
                ["-m", "{{user `memory`}}"],
                ["-smp", "{{user `cpus`}}"]
            ]
        }
    ],
    "provisioners" : [
        {
            "type": "shell",
            "scripts": [
                "scripts/ubuntu-19.04/apt-update.sh",
                "scripts/ubuntu-19.04/apt-xubuntu-core.sh",
                "scripts/ubuntu-19.04/apt-xubuntu-core-extras.sh"
            ]
        },
        {
            "type": "shell",
            "scripts": [
                "scripts/ubuntu-19.04/virtualbox.sh"
            ],
            "only": ["virtualbox-iso"]
        },
        {
            "type": "shell",
            "scripts": [
                "scripts/ubuntu-19.04/qemu.sh"
            ],
            "only": ["qemu"]
        },
        {
            "type": "shell",
            "scripts": [
                "scripts/ubuntu-19.04/cleanup.sh"
            ]
        }
    ]
}
