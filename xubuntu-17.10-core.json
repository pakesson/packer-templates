{
    "variables" : {
        "disk_size" : "80000",
        "memory" : "2048",
        "cpus" : "2",

        "vm_username" : "xubuntu",
        "vm_password" : "password",

        "country" : "SE",
        "language" : "en",
        "locale" : "en_US.UTF-8",
        "keymap" : "se",
        "timezone" : "Europe/Stockholm"
    },
    "description" : "Xubuntu Core 17.10",
    "builders": [
        {
            "name": "xubuntu-17.10-core",
            "type": "virtualbox-iso",
            "boot_command": [
                "<tab><wait> ",
                "net.ifnames=0 ",
                "auto-install/enable=true ",
                "debconf/priority=critical ",
                "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/xubuntu-17.10-core-preseed.cfg ",
                "passwd/username={{user `vm_username`}} ",
                "passwd/user-password={{user `vm_password`}} ",
                "passwd/user-password-again={{user `vm_password`}} ",
                "country={{user `country`}} ",
                "language={{user `language`}} ",
                "locale={{user `locale`}} ",
                "keyboard-configuration/xkb-keymap={{user `keymap`}} ",
                "keyboard-configuration/layoutcode={{user `keymap`}} ",
                "time/zone={{user `timezone`}} ",
                "<enter>"
            ],
            "boot_wait": "10s",
            "disk_size": "{{user `disk_size`}}",
            "guest_os_type": "Ubuntu_64",
            "headless": false,
            "http_directory": "http",
            "iso_urls": [
                "http://archive.ubuntu.com/ubuntu/dists/artful/main/installer-amd64/current/images/netboot/mini.iso"
            ],
            "iso_checksum_type": "sha256",
            "iso_checksum": "05db73efd450156d81a519d35bc7b8109101e12d7ee8d49da695778df568cb36",
            "ssh_username": "{{user `vm_username`}}",
            "ssh_password": "{{user `vm_password`}}",
            "ssh_port": 22,
            "ssh_wait_timeout": "60m",
            "shutdown_command": "sudo systemctl poweroff",
            "format": "ova",
            "vm_name": "xubuntu-17.10-core-amd64",
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
                ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
            ]
        }
    ],
    "provisioners" : [
        {
            "type": "shell",
            "scripts": [
                "scripts/apt-update.sh",
                "scripts/apt-xubuntu-core.sh",
                "scripts/virtualbox.sh",
                "scripts/cleanup.sh"
            ]
        }
    ]
}
